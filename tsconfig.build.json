// tsconfig for the build
{
  "compilerOptions": {
    "module": "esnext",
    "target": "es6",
    "lib": ["dom", "es6", "es2021", "esnext.asynciterable"],
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "strictNullChecks": false,
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "./dist/",
  },
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.stories.ts"]
}